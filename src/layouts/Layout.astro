---
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import '@fontsource/inter/variable.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='stylesheet' href='https://unpkg.com/aos@next/dist/aos.css' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>BFF | {title}</title>
    <meta
      name='description'
      content='Best Films Forever is a Berlin based video collective specialized in live broadcast documentary films & music videos, circulating around music and art.'
    />
    <meta property='og:title' content='Best Films Forever' />
    <meta property='og:site_name' content='Best Films Forever' />
    <meta
      property='og:description'
      content='Best Films Forever is a Berlin based video collective specialized in live broadcast documentary films & music videos, circulating around music and art.'
    />
    <meta property='og:url' content='https://bestfilmsforever.com/' />
    <meta property='og:type' content='website' />
    <meta
      property='og:image:url'
      content='https://bestfilmsforever.com/bff_og-image.png'
    />
    <meta
      property='og:image:secure_url'
      content='https://bestfilmsforever.com/bff_og-image.png'
    />
    <meta property='og:image:width' content='635' />
    <meta property='og:image:height' content='431' />
    <meta property='og:image:type' content='image/png' />
    <meta property='og:image:alt' content='Best Films Forever' />
  </head>
  <body>
    <main class='max-w-[1920px] mx-auto'>
      <slot />
    </main>
    <Footer />
    <script is:inline src='https://unpkg.com/aos@next/dist/aos.js'></script>
    <script is:inline>
      AOS.init({ once: true });
    </script>
  </body>
</html>
