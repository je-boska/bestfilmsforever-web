---
import Player from '../components/Player.astro';
import Layout from '../layouts/Layout.astro';
import * as content from '../../content/index.md';

const { title, reel, lead, clients } = content.frontmatter;
---

<Layout title={title}>
  <main>
    <section>
      <Player reel={reel} />
    </section>
    <section class='flex'>
      <div>
        <h1 class='text-2xl'>
          {title}
        </h1>
        <p>{lead}</p>
      </div>
      <div set:html={content.compiledContent()} />
    </section>
    <section class='flex gap-4 m-8'>
      {clients.map((image: string) => <img src={image} class='h-32' alt='' />)}
    </section>
  </main>
</Layout>
