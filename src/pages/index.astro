---
import Player from '../components/Player.astro';
import Layout from '../layouts/Layout.astro';
import * as content from '../../content/index.md';

const {
  title,
  reel,
  lead,
  members,
  member_photos: memberPhotos,
  clients,
} = content.frontmatter;
---

<Layout title={title}>
  <img
    src='/media/bff-logo-heart.png'
    alt=''
    class='fixed top-4 left-4 h-8 md:h-12 z-10'
  />
  <section>
    <Player reel={reel} />
  </section>
  <section class='max-w-4xl mx-auto my-10 md:my-32'>
    <div class='m-4' data-aos='fade-in' data-aos-duration='800'>
      <h1
        class='uppercase font-mono font-bold text-5xl md:text-6xl xl:text-7xl mb-6 -translate-x-1'
      >
        {title}
      </h1>
      <p class='font-semibold text-lg md:text-xl mb-4'>
        {lead}
      </p>
      <div class='rich-text xl:text-lg' set:html={content.compiledContent()} />
    </div>
  </section>
  <section class='my-10 md:my-20'>
    <div class='grid md:grid-cols-2'>
      {
        memberPhotos.map((memberPhoto: string, idx: number) => (
          <div
            class='group relative'
            data-aos='fade-in'
            data-aos-duration='800'
            data-aos-delay={idx * 100}
          >
            <img src={memberPhoto} alt='' />
            <span class='absolute bottom-4 left-4 text-white opacity-0 group-hover:opacity-60 transition-opacity'>
              {members[idx]}
            </span>
          </div>
        ))
      }
    </div>
  </section>
  <section
    class='max-w-7xl mx-auto my-32'
    data-aos='fade-in'
    data-aos-duration='800'
  >
    <div class='flex justify-center mb-16'>
      <h3 class='md:text-lg uppercase font-mono'>
        Clients & Collaboration Partners
      </h3>
    </div>
    <div class='flex flex-wrap justify-center gap-y-8 gap-x-8 sm:gap-x-16 m-4'>
      {
        clients.map((image: string) => (
          <div class='h-auto max-w-[120px] flex items-center'>
            <img src={image} alt='' />
          </div>
        ))
      }
    </div>
  </section>
</Layout>
